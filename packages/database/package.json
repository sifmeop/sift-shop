{
	"name": "@sift-shop/database",
	"private": true,
	"version": "0.0.1",
	"type": "commonjs",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"prisma:generate": "bunx prisma generate",
		"prisma:studio": "bunx prisma studio",
		"prisma:push": "bunx prisma db push",
		"prisma:reset": "bunx prisma db push --force-reset",
		"prisma:migrate": "bunx prisma migrate dev",
		"prisma:deploy": "bunx prisma migrate deploy",
		"prisma:build": "bunx prisma db push && bunx prisma generate && bun run build"
	},
	"dependencies": {
		"@prisma/adapter-pg": "^7.3.0",
		"@prisma/client": "^7.4.0",
		"dotenv": "^17.2.4"
	},
	"devDependencies": {
		"@types/node": "^25.2.2",
		"@types/pg": "^8.16.0",
		"prisma": "^7.4.0",
		"typescript": "^5.7.3"
	}
}
